---
interface Props {
	title: string;
	description: string;
	href: string;
    image: string;
}

const { title, description, href, image } = Astro.props;
---

<li class="flex justify-between gap-x-6 py-5">
    <a href={href}>
        <div class="flex min-w-0 gap-x-4">
        <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src={image} alt="">
        <div class="min-w-0 flex-auto">
            <p class="text-sm font-semibold leading-6 ">{title}</p>
            <p class="mt-1 truncate text-xs leading-5 text-gray-400">{description}</p>
        </div>
        </div>
    </a>
</li>